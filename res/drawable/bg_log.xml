<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>

        <!-- подложка -->
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:centerColor="#ff730000"
                android:endColor="#99730000"
                android:startColor="#99730000"
                android:type="linear" />

            <padding
                android:bottom="1dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:endColor="#FF341212"
                android:startColor="#FF1a1a1a"
                android:type="linear" />

            <padding
                android:bottom="2px"
                android:left="2px"
                android:right="2px"
                android:top="2px" />

            <stroke
                android:width="1dp"
                android:color="#ff000000" />
        </shape>
    </item>

    <!-- white -->
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:endColor="#AAc25b69"
                android:startColor="#880a0a0a"
                android:type="linear" />

            <padding
                android:bottom="0dp"
                android:left="1dp"
                android:right="1px"
                android:top="3px" />
        </shape>
    </item>

    <!-- основная фигура -->
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:centerColor="#FF222222"
                android:centerX="0.4"
                android:centerY="0.4"
                android:endColor="#ff000000"
                android:startColor="#ff000000"
                android:type="linear" />
        </shape>
    </item>

</layer-list>